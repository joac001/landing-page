---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

const cards = [
    {
        image: "../public/card-1.png",
        title: "Propuestas",
        description: "desc",
        stl: "",
    },
    {
        image: "../public/card-2.png",
        title: "¿Que es el partido del medio?",
        description: "desc",
        stl: "",
    },
    {
        image: "../public/card-3.png",
        title: "¿Quien es Andres juarez",
        description: "desc",
        stl: "flex-row-reverse",
    },
];
---

<Layout title="Andres Juarez">
    <main class="grid grid-cols-2 grid-rows-2 gap-8 bg-blue-50 p-6 pb-10">
        <img
            src="../public/profile-image.png"
            alt="Profile image"
            class="rounded-lg"
        />
        {
            cards.map((card) => (
                <Card
                    image={card.image}
                    title={card.title}
                    description={card.description}
                    stl={card.stl}
                />
            ))
        }
    </main>
</Layout>
